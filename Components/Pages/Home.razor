@page "/"
@rendermode InteractiveServer

<PageTitle>Dashboard - Sistema de Faturação</PageTitle>

<!-- Header Section -->
<MudText Typo="Typo.h3" Class="mb-2">Dashboard</MudText>
<MudText Typo="Typo.body1" Color="Color.Primary" Class="mb-1">Olá, Dalton Luís Bem Vindo ao Sistema Csc-Lda!</MudText>
<MudText Typo="Typo.body2" Color="Color.Secondary" Class="mb-1">Tenhas todo o prazer de consultar os teus Problemas aqui ☺</MudText>
<MudText Typo="Typo.caption" Color="Color.Secondary" Class="mb-6">Online, Segunda-Feira, 03 de Novembro de 2025</MudText>

<!-- Statistics Cards -->
<MudGrid Class="mb-6">
    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="2">
            <MudCardContent>
                <div class="d-flex justify-space-between align-center mb-2">
                    <MudText Typo="Typo.h3">29</MudText>
                    <MudIcon Icon="@Icons.Material.Filled.Inventory" Size="Size.Large" Color="Color.Primary" />
                </div>
                <MudText Typo="Typo.body2" Color="Color.Secondary">Produtos Cadastrados</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true">Gerir Produtos Da Loja</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="2">
            <MudCardContent>
                <div class="d-flex justify-space-between align-center mb-2">
                    <MudText Typo="Typo.h3">2</MudText>
                    <MudIcon Icon="@Icons.Material.Filled.Groups" Size="Size.Large" Color="Color.Success" />
                </div>
                <MudText Typo="Typo.body2" Color="Color.Secondary">Clientes Cadastrados</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true">Ver Clientes</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="2">
            <MudCardContent>
                <div class="d-flex justify-space-between align-center mb-2">
                    <MudText Typo="Typo.h3">2</MudText>
                    <MudIcon Icon="@Icons.Material.Filled.People" Size="Size.Large" Color="Color.Info" />
                </div>
                <MudText Typo="Typo.body2" Color="Color.Secondary">Usuários Cadastrados</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true">Ver Usuários</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="6" md="3">
        <MudCard Elevation="2">
            <MudCardContent>
                <div class="d-flex justify-space-between align-center mb-2">
                    <MudText Typo="Typo.h3">1</MudText>
                    <MudIcon Icon="@Icons.Material.Filled.LocalShipping" Size="Size.Large" Color="Color.Warning" />
                </div>
                <MudText Typo="Typo.body2" Color="Color.Secondary">Fornecedor Cadastrados</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true">Ver Fornecedor</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
</MudGrid>

<!-- Sales Table Section -->
<MudPaper Elevation="2" Class="pa-6">
    <div class="d-flex justify-space-between align-center mb-4">
        <MudText Typo="Typo.h5">Vendas efectuada Hoje</MudText>
        <MudButton Variant="Variant.Text" Color="Color.Primary">Procurar</MudButton>
    </div>

    <MudTable Items="@vendas" Hover="true" Breakpoint="Breakpoint.Sm" Loading="false" LoadingProgressColor="Color.Primary">
        <ColGroup>
            <col />
            <col />
            <col />
            <col />
            <col />
            <col />
            <col />
        </ColGroup>
        <HeaderContent>
            <MudTh>Cliente</MudTh>
            <MudTh>Descrição</MudTh>
            <MudTh>Total</MudTh>
            <MudTh>Situação</MudTh>
            <MudTh>Status</MudTh>
            <MudTh>T.Pago | T.Faltante</MudTh>
            <MudTh>Acção</MudTh>
        </HeaderContent>
        <RowTemplate>
        </RowTemplate>
        <NoRecordsContent>
            <MudText Typo="Typo.body1" Align="Align.Center" Class="py-8">Não foi encontrado nenhuma informação</MudText>
        </NoRecordsContent>
        <FooterContent>
            <MudTd colspan="2">Mostrando 0 a 0 de 0 registros</MudTd>
            <MudTd colspan="5" Style="text-align:right">
                <MudText Typo="Typo.body2">Venda do dia 0,00 €</MudText>
            </MudTd>
        </FooterContent>
    </MudTable>

    <MudText Typo="Typo.h6" Align="Align.Center" Class="mt-4">Total Caixa: 0,00 €</MudText>
    <MudText Typo="Typo.body2" Align="Align.Center" Color="Color.Secondary" Class="mt-6">Maiores despesas</MudText>
</MudPaper>

<!-- Footer Credit -->
<MudText Typo="Typo.caption" Align="Align.Center" Color="Color.Secondary" Class="mt-8">
    Sistema Desenvolvido por<br/>
    <strong>Dalton Luís</strong><br/>
    Todos os direitos reservados<br/>
    by © Csc-Lda -> Sistem Solution<br/>
    2022-2025
</MudText>

@code {
    private List<object> vendas = new();
}

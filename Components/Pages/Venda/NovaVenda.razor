@page "/venda/nova"
@rendermode InteractiveServer
@using BillingSystem.Components.Shared

<PageTitle>Nova Venda - Sistema de Faturação</PageTitle>

<div class="p-6 bg-gray-50 min-h-screen">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-800 mb-2">Nova Venda</h1>
        <p class="text-gray-600">Registre uma nova venda no sistema</p>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
        <!-- Cliente Selection -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Cliente *</label>
                <select @bind="selectedCliente" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-orange-500 focus:border-orange-500">
                    <option value="">Selecione um cliente</option>
                    <option value="1">Cliente 1</option>
                    <option value="2">Cliente 2</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Data da Venda *</label>
                <input type="date" @bind="dataVenda" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-orange-500 focus:border-orange-500" />
            </div>
        </div>

        <!-- Produtos Section -->
        <div class="mb-6">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-semibold text-gray-800">Produtos</h3>
                <ActionButton Icon="fa-solid fa-plus" 
                              Text="Adicionar Produto" 
                              OnClick="AdicionarProduto" />
            </div>

            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-50 border-b border-gray-200">
                        <tr>
                            <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">Produto</th>
                            <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">Quantidade</th>
                            <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">Preço Unit.</th>
                            <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">Subtotal</th>
                            <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (produtos.Count == 0)
                        {
                            <EmptyState Colspan="5" 
                                        Message="Nenhum produto adicionado" 
                                        Icon="fa-solid fa-box-open" />
                        }
                        else
                        {
                            @foreach (var produto in produtos)
                            {
                                <tr class="border-b border-gray-200">
                                    <td class="px-4 py-3">
                                        <select class="border border-gray-300 rounded px-2 py-1 w-full">
                                            <option>Selecione um produto</option>
                                        </select>
                                    </td>
                                    <td class="px-4 py-3">
                                        <input type="number" min="1" value="1" class="border border-gray-300 rounded px-2 py-1 w-24" />
                                    </td>
                                    <td class="px-4 py-3">
                                        <input type="number" step="0.01" class="border border-gray-300 rounded px-2 py-1 w-32" />
                                    </td>
                                    <td class="px-4 py-3 font-semibold">0,00 €</td>
                                    <td class="px-4 py-3">
                                        <IconButton Icon="fa-solid fa-trash" 
                                                    ColorScheme="red" 
                                                    OnClick="@(() => RemoverProduto(produto))" />
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Totais -->
        <div class="bg-gray-50 rounded-lg p-6 mb-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <p class="text-sm text-gray-600 mb-1">Subtotal</p>
                    <p class="text-2xl font-bold text-gray-800">@subtotal.ToString("N2") €</p>
                </div>
                <div>
                    <p class="text-sm text-gray-600 mb-1">Desconto</p>
                    <input type="number" step="0.01" @bind="desconto" class="border border-gray-300 rounded px-2 py-1 w-32" />
                </div>
                <div>
                    <p class="text-sm text-gray-600 mb-1">Total</p>
                    <p class="text-3xl font-bold text-orange-600">@((subtotal - desconto).ToString("N2")) €</p>
                </div>
            </div>
        </div>

        <!-- Forma de Pagamento -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Forma de Pagamento *</label>
                <select @bind="formaPagamento" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-orange-500 focus:border-orange-500">
                    <option value="">Selecione</option>
                    <option value="dinheiro">Dinheiro</option>
                    <option value="cartao">Cartão</option>
                    <option value="transferencia">Transferência</option>
                    <option value="multicaixa">Multicaixa</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Situação *</label>
                <select @bind="situacao" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-orange-500 focus:border-orange-500">
                    <option value="">Selecione</option>
                    <option value="pago">Pago</option>
                    <option value="pendente">Pendente</option>
                    <option value="parcial">Parcialmente Pago</option>
                </select>
            </div>
        </div>

        <!-- Observações -->
        <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">Observações</label>
            <textarea @bind="observacoes" rows="4" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-orange-500 focus:border-orange-500" placeholder="Digite observações sobre a venda..."></textarea>
        </div>

        <!-- Botões de Ação -->
        <div class="flex justify-end gap-4">
            <ActionButton Text="Cancelar" 
                          Variant="ghost" 
                          OnClick="Cancelar" />
            <ActionButton Text="Salvar Rascunho" 
                          Variant="secondary" 
                          OnClick="SalvarRascunho" />
            <ActionButton Text="Finalizar Venda" 
                          Variant="primary" 
                          OnClick="FinalizarVenda" />
        </div>
    </div>
</div>

@code {
    private string selectedCliente = "";
    private DateTime dataVenda = DateTime.Now;
    private List<object> produtos = new();
    private decimal subtotal = 0;
    private decimal desconto = 0;
    private string formaPagamento = "";
    private string situacao = "";
    private string observacoes = "";

    private void AdicionarProduto()
    {
        produtos.Add(new object());
    }

    private void RemoverProduto(object produto)
    {
        produtos.Remove(produto);
    }

    private void Cancelar()
    {

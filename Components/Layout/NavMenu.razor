        2022-2025
    </MudText>
</MudNavMenu>

@code {
    private HashSet<string> openMenus = new HashSet<string> { "vendas" };

    private bool IsMenuOpen(string menuName)
    {
        return openMenus.Contains(menuName);
    }
}
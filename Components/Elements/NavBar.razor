@rendermode InteractiveServer

<nav class="fixed top-0 right-0 left-64 z-30 bg-white border-b border-gray-200 h-20">
  <div class="px-6 py-4 h-full">
    <div class="flex items-center justify-between h-full">
      <!-- Left Side - Menu Toggle & Search -->
      <div class="flex items-center gap-4">
        <button class="text-gray-500 hover:text-gray-700">
          <i class="fa-solid fa-bars text-xl"></i>
        </button>
        
        <div class="hidden md:block">
          <p class="text-sm text-gray-600">Encontrar áreas</p>
        </div>
        
        <button class="text-gray-500 hover:text-gray-700">
          <i class="fa-solid fa-search"></i>
        </button>
      </div>

      <!-- Right Side - Icons & User Profile -->
      <div class="flex items-center gap-4">
        <!-- Dark Mode Toggle -->
        <button class="text-gray-500 hover:text-gray-700">
          <i class="fa-solid fa-moon text-lg"></i>
        </button>

        <!-- Fullscreen -->
        <button class="text-gray-500 hover:text-gray-700">
          <i class="fa-solid fa-expand text-lg"></i>
        </button>

        <!-- Notifications -->
        <button class="text-gray-500 hover:text-gray-700 relative">
          <i class="fa-solid fa-bell text-lg"></i>
          <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full w-4 h-4 flex items-center justify-center">2</span>
        </button>

        <!-- User Menu -->
        <div class="relative">
          <button type="button"
                  class="flex items-center gap-3 p-2 rounded-lg hover:bg-gray-100"
                  @onclick="ToggleUserMenu">
            <div class="text-right hidden md:block">
              <p class="text-sm font-semibold text-gray-900">Dalton Luís</p>
              <p class="text-xs text-gray-500">Super Admin</p>
            </div>
            <div class="w-10 h-10 rounded-full bg-orange-500 flex items-center justify-center text-white font-semibold">
              29
            </div>
          </button>

          @if (isUserMenuOpen)
          {
            <div class="absolute right-0 mt-2 w-56 bg-white rounded-lg shadow-lg border border-gray-200">
              <div class="px-4 py-3 border-b border-gray-200">
                <p class="text-sm font-semibold text-gray-900">Dalton Luís</p>
                <p class="text-xs text-gray-500">Super Admin</p>
              </div>
              <ul class="py-2">
                <li>
                  <a href="/perfil" class="flex items-center gap-3 px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                    <i class="fa-solid fa-user"></i>
                    Meu Perfil
                  </a>
                </li>
                <li>
                  <a href="/configuracoes" class="flex items-center gap-3 px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                    <i class="fa-solid fa-cog"></i>
                    Configurações
                  </a>
                </li>
                <li>
                  <a href="/ajuda" class="flex items-center gap-3 px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                    <i class="fa-solid fa-question-circle"></i>
                    Ajuda
                  </a>
                </li>
                <li class="border-t border-gray-200 mt-2 pt-2">
                  <a href="/sair" class="flex items-center gap-3 px-4 py-2 text-sm text-red-600 hover:bg-red-50">
                    <i class="fa-solid fa-sign-out-alt"></i>
                    Sair
                  </a>
                </li>
              </ul>
            </div>
          }
        </div>
      </div>
    </div>
  </div>
</nav>

@code {
    private bool isUserMenuOpen = false;

    private void ToggleUserMenu() => isUserMenuOpen = !isUserMenuOpen;
}